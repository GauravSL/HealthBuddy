<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bg_bottom">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp10">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/photo"
            android:layout_gravity="center"

            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="DOC12"
        android:textColor="@color/teal_200"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="   Name"
        android:textSize="@dimen/sp14"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/icon_username"
        app:drawableTint="@color/teal_200" />

    <EditText
        android:id="@+id/et_doctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/doctor_editttext_roundedcorner"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="   Mail"
        android:textSize="@dimen/sp14"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/icon_email"
        app:drawableTint="@color/teal_200" />

    <EditText
        android:id="@+id/et_doctorMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"

        android:background="@drawable/doctor_editttext_roundedcorner"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="   Mobile no"
        android:textSize="@dimen/sp14"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/icon_telephone"
        app:drawableTint="@color/teal_200" />

    <EditText
        android:id="@+id/et_doctorMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/doctor_editttext_roundedcorner"

        android:inputType="number"
        android:maxLength="10"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="   Degree"
        android:textSize="@dimen/sp14"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/icon_education"
        app:drawableTint="@color/teal_200" />

    <EditText
        android:id="@+id/et_doctorDegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="3dp"
        android:background="@drawable/doctor_editttext_roundedcorner"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="   Address"
        android:textSize="@dimen/sp14"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/icon_home"
        app:drawableTint="@color/teal_200" />

    <EditText
        android:id="@+id/et_doctorAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/doctor_editttext_roundedcorner"
        android:padding="5dp"
        android:textSize="20sp"
        android:maxLines="3"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>